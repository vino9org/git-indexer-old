    "version": "0.2.0",
    "configurations": [
        {
            "name": "run indexer",
            "type": "python",
            "request": "launch",
            "program": "run.py",
            "args": [
                "--index",
                "--source",
                "list",
                "--query",
                "repo.lst",
                "--filter",
                "*"
            ],
            "console": "integratedTerminal",
            "justMyCode": false,
            "env": {
                "GITLAB_TOKEN": "zzz"
            }
        },
        {
            "name": "flask",
            "type": "python",
            "request": "launch",
            "module": "flask",
            "env": {
                "FLASK_APP": "gui",
                "FLASK_DEBUG": "1"
            },
            "args": [
                "run",
                "--no-debugger",
                "--no-reload"
            ],
            "jinja": true,
            "justMyCode": true
        }
    ]
}
